@page
@model CarBooking.Web.Pages.Cars.IndexModel

@{
    ViewData["Title"] = "Cars";
}

<h1>Listing</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Name)
            </th>
            <th>

            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Cars)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <form method="post" asp-page-handler="delete" asp-route-carId="@item.Id">
                        <button class="btn btn-danger" onclick="return confirm('Youre about to delete ?')">Delete</button>

                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-page="./Detail" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
